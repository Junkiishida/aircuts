<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Appointments for <%= current_shop.shop_name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
    <% @appointments.each do |a|%>
      <div class="card-appointment">
      <ul>
        <strong> Appointment Status: <%= a.state %></strong>
        <li> Scheduled at: <%= a.scheduled_at %></li>
        <li> At: <%= a.barber.shop.shop_name %></li>
        <li> With: <%= a.barber.name %></li>
        <li> Description: <%= a.description %></li>
        <li>

            <% if a.state == 'Pending' %>
          <%= simple_form_for a, url: incoming_appointment_path(a) do |f| %>
              <%= f.hidden_field :state, value: 'Accepted' %>
              <%= f.submit "Accept Appointment", class: "btn btn-primary" %>
          <% end %>


          <%= simple_form_for a, url: incoming_appointment_path(a) do |f| %>
              <%= f.hidden_field :state, value: 'Denied' %>
              <%= f.submit "Denied Appointment", class: "btn btn-danger" %>
          <% end %>
          <% end %>

        </li>
      </ul>
      </div>
    <% end %>
    </div>
  </div>
</div>
